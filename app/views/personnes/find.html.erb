                    </span>

    <button class="btn btn-xs btn-info no-radius align-middle" type="button" style="padding-bottom: 3px;padding-top: 8px" >
        <i class="icon-search bigger-180 center"></i>
    </button>

    <button class="btn btn-xs  btn-info no-radius tooltip-info align-bottom" data-rel="tooltip" data-placement="right" title="Effacer recherche" type="reset" style="padding-bottom: 3px; padding-top: 3px">
        <i class=" icon-refresh bigger-130"></i>
    </button>
</form>


<table class="table table-border table-striped table-hover">
    <thead>
    <tr>
        <th>Familyname</th>
        <th>Firstname</th>
        <th>Dateofbirth</th>
        <th>Email</th>
        <th>City</th>
        <th>Zipcode</th>
        <th>Privatephone</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    <% @personnes.each do |personne| %>
        <tr data-link="<%= personne_path(:id => personne.id) %>">
            <td><%= personne.familyName %></td>
            <td><%= personne.firstName %></td>
            <td><%= personne.dateOfBirth %></td>
            <td><%= personne.email %></td>
            <td><%= personne.city %></td>
            <td><%= personne.zipCode %></td>
            <td><%= personne.privatePhone %></td>
            <td><%= link_to 'Edit Survey', new_answer_path(:personne_id => personne.id) %></td>
            <td><%= link_to 'Edit', edit_personne_path(personne) %></td>
            <td><%= link_to 'Edit Survey', new_answer_path(:personne_id => personne.id) %></td>
            <td><%= link_to 'Destroy', personne, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<script>
    $("tr[data-link]").click(function() {
        window.location = this.dataset.link
    })
</script>