<%= form_for(@personne) do |f| %>
    <% if @personne.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@personne.errors.count, 'error') %> prohibited this personne from being saved:</h2>
            <ul>
            <% @personne.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :familyName %><br>
        <%= f.text_field :familyName %>
    </div>
    <div class="field">
        <%= f.label :maiderName %><br>
        <%= f.text_field :maiderName %>
    </div>
    <div class="field">
        <%= f.label :firstName %><br>
        <%= f.text_field :firstName %>
    </div>
    <div class="field">
        <%= f.label :dateOfBirth %><br>
        <%= f.date_select(:dateOfBirth,:start_year => Time.now.year,:end_year => Time.now.year - 100) %>
    </div>
    <% if @personne.type == 'Patient' %>
        <div class="field">
            <%= f.label :referedBy %><br>
            <%= f.text_field :referedBy %>
        </div>
    <% end %>
    <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
    </div>
    <div class="field">
        <%= f.label :nationality %><br>
        <%= f.text_field :nationality %>
    </div>
    <% if @personne.type == 'Patient' %>
        <div class="field">
            <%= f.label :legalCaregiver %><br>
            <%= f.text_field :legalCaregiver %>
        </div>
    <% end %>
    <div class="field">
        <%= f.label :civilStatus %><br>
        <%= f.text_field :civilStatus %>
    </div>
    <div class="field">
        <%= f.label :address %><br>
        <%= f.text_field :address %>
    </div>
    <div class="field">
        <%= f.label :city %><br>
        <%= f.text_field :city %>
    </div>
    <div class="field">
        <%= f.label :zipCode %><br>
        <%= f.number_field :zipCode %>
    </div>
    <div class="field">
        <%= f.label :co %><br>
        <%= f.text_field :co %>
    </div>
    <div class="field">
        <%= f.label :privatePhone %><br>
        <%= f.text_field :privatePhone %>
    </div>
    <div class="field">
        <%= f.label :profPhone %><br>
        <%= f.text_field :profPhone %>
    </div>

    <% if @personne.type == 'Patient' %>
        <div class="field">
            <%= f.label :trade %><br>
            <%= f.text_field :trade %>
        </div>
        <div class="field">
            <%= f.label :employer %><br>
            <%= f.text_field :employer %>
        </div>
        <div class="field">
            <%= f.label :employerAddress %><br>
            <%= f.text_field :employerAddress %>
        </div>
    <% end %>
    <div class="field">
        <%= f.label :illnessInsurance %><br>
        <%= f.text_field :illnessInsurance %>
    </div>
    <div class="field">
        <%= f.label :additionnalInsurance %><br>
        <%= f.text_field :additionnalInsurance %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
